<div class="jumbotron">
  <h1>Log in!</h1>
  <p>You'll be hopping in no time...</p>
</div>
<div class="form_body">
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Log in</h3>
        </div>
        <div class="panel-body">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, placeholder: "Email", autofocus: true, size: "40x1" %>
          </div>
          <br>
          <div class="field">
            <%= f.password_field :password, placeholder: "Password", autocomplete: "off", size: "40x1" %>
          </div>
          <br />
          <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>
          <br>
          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
          <br>
          <% end %>
          <hr>
          <%= render "users/shared/links" %>
        </div>
        <div class="col-md-8">
        </div>
      </div>
    </div>
  </div>
</div>
