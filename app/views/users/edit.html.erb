<div class="jumbotron">
	<h1>Make some changes</h1>
</div>
<div class="form_body">
	<div class="row">
		<div class="col-md-4">
			<div class="panel panel-info">
				<div class="panel-heading">
					<h3 class="panel-title">Profile</h3>
				</div>
				<div class="panel-body">

					<%= form_for @current_user do |f| %>
					<div class="field">
						<%= f.label :avatar %><br />
						<%= f.file_field :avatar %>
					</div>
					<br />

					<div class="field">
						<%= f.label :first_name %><br />
						<%= f.text_field :first_name, placeholder: "First Name", autofocus: true, size: "40x1" %>
					</div>

					<div class="field">
						<%= f.label :last_name %><br />
						<%= f.text_field :last_name, placeholder: "Last Name", size: "40x5" %>
					</div>
					<br />
					<%= f.fields_for :profile do |p| %>
					<div class="field">
						<%= f.label :bio %><br />
						<%= p.text_area :bio, size: "40x12" %>
					</div>

					<br />
					<div class="field">
						<%= p.label :birthday %><br />
						<%= p.date_select :birthday, :start_year => Date.current.year, :end_year => 1900 %>
					</div>
					<br />
					<div class="field">
						<%= p.label :gender %><br />
						<%= p.radio_button :gender, 'Male' %>
						<%= p.label :gender, 'Male' %>
						<%= p.radio_button :gender, 'Female' %>
						<%= p.label :gender, 'Female' %><br />
					</div>

					<% end %>

					<div class="field">
						<%= f.label :email %><br />
						<%= f.email_field :email %>
					</div>
					<br />

					<%= f.submit :update %>
					<% end %>

					<%= link_to "Delete Account", @current_user, :method => :delete, data: { confirm: "Are you sure you want to delete this account?"} %>

				</div>
			</div>
		</div>
	</div>
</div>
