<%= include_gon %>
<div id="map_body">
	<div class="row">
		<div class="col-md-12">
			<div id="map_header">
				<% if @location %>
				<h1 id="map_title">Welcome to <%= @location %>!</h1>
				<% else %>
				<h1 id="map_title">starhopper</h1>
				<% end %>
			</div>
		</div>
	</div>

<!-- <div id="floating-panel">
