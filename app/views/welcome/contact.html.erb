
<div class="jumbotron">
	<h1>Talk to us!</h1>
	<p>Questions or feedback? We're listening.</p>
	<!-- <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p> -->
</div>
<div class="row">
	<div class="col-md-4">
			<div class="contact-body">
				<!-- CONTACT FORM -->
				<%= form_tag(controller: "welcome", action:"sendmail", method: "post") do %>
				<!-- FIRST PANEL -->
				<div class="panel panel-info">
					<div class="panel-heading">
						<h3 class="panel-title">Tell us about yourself!</h3>
					</div>
					<div class="panel-body">
						<%= text_field_tag(:name, nil, :placeholder => "Name", size: "40x1", required: true)%>
						<br>
						<br>
						<%= email_field_tag(:email, nil, :placeholder => "Email", size: "40x1", required: true) %>
					</div>
				</div>
				<!-- SECOND PANEL -->
				<div class="panel panel-info">
					<div class="panel-heading">
						<h3 class="panel-title">Your Comments</h3>
					</div>
					<div class="panel-body">
						<%= text_area_tag(:body, nil, :placeholder => "Message", size:"40x12") %>
						<br>
						<%= button_tag("Contact", type: 'submit') %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-8">
	</div>
</div>
