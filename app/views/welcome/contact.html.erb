
<div class="jumbotron">
	<h1>Talk to us!</h1>
	<p>Questions or feedback? We're listening.</p>
	<!-- <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p> -->
</div>
<div id="contact-wrapper">
	<div class="contact-form">
		<!-- CONTACT FORM -->
		<%= form_tag(controller: "welcome", action:"sendmail", method: "post") do %>
		<!-- FIRST PANEL -->
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Tell us about yourself!</h3>
			</div>
			<div class="panel-body">
				<%= text_field_tag(:name, nil, :placeholder => "Name", size: "50x1", border: 'none', required: true)%>
				<br>
				<br>
				<%= email_field_tag(:email, nil, :placeholder => "Email", size: "50x1", required: true) %>
			</div>
		</div>
		<!-- SECOND PANEL -->
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Your Comments</h3>
			</div>
			<div class="panel-body">
				<%= text_area_tag(:body, nil, :placeholder => "Message", size:"50x12") %>
				<br>
				<%= button_tag("Contact", type: 'submit') %>
				<% end %>
			</div>
		</div>
	</div>
</div>
